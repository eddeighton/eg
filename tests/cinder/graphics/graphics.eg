dim glm::vec2 screen;

action Line[ 2048 ]
{
    dim glm::vec2 start;
    dim glm::vec2 end;
    dim glm::vec3 colour;
    dim float width;
    
    action Move;
    
    dim float Distance;
    dim float Speed;
    
    action Up;
    action Down;
    action Left;
    action Right;
    
    dim std::vector< int > Sequence;
    action Sequencer
    {
        while( true )
        {
            for( int i : Sequence() )
            {
                switch( i )
                {
                    case 0: Up();       break;
                    case 1: Right();    break;
                    case 2: Down();     break;
                    case 3: Left();     break;
                    default:
                        break;
                }
            }
            eg::sleep();
        }
    }
    
    while( true )
    {
        glLineWidth( width() );
        cinder::gl::color( colour().x, colour().y, colour().z );
        cinder::gl::drawLine( start(), end() );
        eg::sleep();
    }
}

