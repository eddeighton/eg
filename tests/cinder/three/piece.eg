action Piece[ 256 ] : Cube
{
    size( cinder::vec3( 1.0, 1.0, 1.0 ) );
    
    dim glm::vec2 pos;
    dim float movetime;
    
    while( true )
    {
        position( cinder::vec3( pos().x + 0.5, 0.5, pos().y + 0.5 ) );
        Render();
        eg::sleep();
    }
    
    export std::string Info()
    {
        std::ostringstream os;
        os << "position: " << pos().x << "," << pos().y;
        return os.str();
    }
                
    action Up;
    action Down;
    action Left;
    action Right;
    
    action Move;
    
    action Plan;
}

