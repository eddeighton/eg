
include( "glm/vec2.hpp" );

cinder::app::getWindow()->setSize( 1024, 1024 );
cinder::app::setWindowPos( 100, 100 );

action Square[ 1024 ]
{
    dim glm::vec2 position;
    dim float color;
    dim float size;
    
    while( true )
    {
        cinder::gl::color( cinder::Color( cinder::CM_HSV, color(), 1, 1 ) );
        glm::vec2 halfSize( size() / 2.0f, size() / 2.0f );
        cinder::gl::drawStrokedRect( cinder::Rectf( position() - halfSize, position() + halfSize ) );
        eg::sleep();
    }
}

//infinite loop the root
while( true )
{
	cinder::gl::clear();
    eg::sleep();
}